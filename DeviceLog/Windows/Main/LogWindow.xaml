<syncfusion:ChromelessWindow
    x:Class="DeviceLog.Windows.Main.LogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d"
    UseLayoutRounding="True"
    AllowsTransparency="True"
    TitleTextAlignment="Center"
    Title="DeviceLog - Logs" Height="300" Width="300" WindowStartupLocation="CenterScreen" Icon="/DeviceLog;component/Resources/Images/keyboard.png">
    <Grid>
        <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"></TextBox>
    </Grid>
</syncfusion:ChromelessWindow>
